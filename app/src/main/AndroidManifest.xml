<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mapbox.search.demo"
    >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".SearchDemoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >

        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustNothing"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SimpleUiSearchActivity" />

        <activity android:name=".api.ForwardGeocodingKotlinExampleActivity" />
        <activity android:name=".api.ForwardGeocodingJavaExampleActivity" />
        <activity android:name=".api.ReverseGeocodingKotlinExampleActivity" />
        <activity android:name=".api.ReverseGeocodingJavaExampleActivity" />
        <activity android:name=".api.CategorySearchKotlinExampleActivity" />
        <activity android:name=".api.CategorySearchJavaExampleActivity" />
    </application>

</manifest>
